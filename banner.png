<!-- Save this as an SVG (e.g. banner.svg) and convert to PNG if needed -->
<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="360" viewBox="0 0 1200 360" role="img" aria-label="Portfolio banner">
    <defs>
        <linearGradient id="bg" x1="0" x2="1" y1="0" y2="1">
            <stop offset="0" stop-color="#0f172a"/>
            <stop offset="1" stop-color="#0b8793"/>
        </linearGradient>
        <linearGradient id="wave" x1="0" x2="1">
            <stop offset="0" stop-color="#ffffff" stop-opacity="0.12"/>
            <stop offset="1" stop-color="#ffffff" stop-opacity="0.04"/>
        </linearGradient>
        <filter id="soft" x="-50%" y="-50%" width="200%" height="200%">
            <feGaussianBlur stdDeviation="20" result="b"/>
            <feBlend in="SourceGraphic" in2="b"/>
        </filter>
    </defs>

    <!-- background -->
    <rect width="1200" height="360" fill="url(#bg)"/>

    <!-- decorative blurred circles -->
    <g filter="url(#soft)" opacity="0.6">
        <circle cx="980" cy="80" r="120" fill="#12c2e9"/>
        <circle cx="160" cy="260" r="100" fill="#c471ed"/>
    </g>

    <!-- subtle waves -->
    <path d="M0,240 C200,200 400,280 600,240 C800,200 1000,280 1200,240 L1200,360 L0,360 Z" fill="url(#wave)" opacity="0.7"/>
    <path d="M0,200 C240,160 360,240 600,200 C840,160 960,240 1200,200 L1200,360 L0,360 Z" fill="url(#wave)" opacity="0.4"/>

    <!-- main text -->
    <g fill="#fff" text-anchor="middle" font-family="Inter, Roboto, Arial, sans-serif">
        <text x="50%" y="135" font-size="56" font-weight="700" letter-spacing="0.5">Portfolio</text>
        <text x="50%" y="185" font-size="20" font-weight="500" opacity="0.9">Design • Frontend • Projects</text>
    </g>

    <!-- optional subtitle on the left -->
    <text x="60" y="320" fill="#ffffff" font-family="Inter, Roboto, Arial, sans-serif" font-size="14" opacity="0.85">Made with care — Your Name</text>
</svg>